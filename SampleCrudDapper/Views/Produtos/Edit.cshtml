@model Produtos
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="card-header h1">Produto</h1>

<div class="card-body" style="width: 600px;">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="ProdutoId" class="control-label"></label>
            <input asp-for="ProdutoId" type="text" class="form-control" disabled />
            <input type="hidden" asp-for="ProdutoId" />
        </div>
        <div class="form-group">
            <label asp-for="Nome" class="control-label"></label>
            <input asp-for="Nome" type="text" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Estoque" class="control-label"></label>
            <input asp-for="Estoque" type="number" class="form-control" />
            <span asp-validation-for="Estoque" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Preco" class="control-label"></label>
            <input asp-for="Preco" type="number" step="any" class="form-control" />
            <span asp-validation-for="Preco" class="text-danger"></span>
        </div>
        <div class="form-group text-left h3">
            <input type="submit" value="Alterar" class="btn btn-success" />
            <input type="reset" value="Cancelar" class="btn btn-danger" />
        </div>
    </form>
</div>
